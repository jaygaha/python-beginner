{% extends "base.jinja2" %}
{% block title %}Task List{% endblock %}
{% block content %}
    <h2>Tasks</h2>
    {% if tasks %}
        <ul>
        {% for task in tasks %}
            <li><a href="{{ request.route_url('task', id=task.id) }}">{{ task.title }}</a></li>
        {% endfor %}
        </ul>
    {% else %}
        <p>No tasks available.</p>
    {% endif %}
{% endblock %}
