{% extends "base.jinja2" %}
{% block title %}Add Task{% endblock %}
{% block content %}
    <h2>Add New Task</h2>
    {% if errors %}
        <ul class="errors">
        {% for error in errors %}
            <li>{{ error }}</li>
        {% endfor %}
        </ul>
    {% endif %}
    <form method="POST" action="{{ request.route_url('task_add') }}">
        <input type="hidden" name="_csrf" value="{{ csrf_token }}">
        <div>
            <label for="title">Title:</label>
            <input type="text" id="title" name="title" value="{{ title or '' }}">
        </div>
        <div>
            <label for="description">Description:</label>
            <textarea id="description" name="description">{{ description or '' }}</textarea>
        </div>
        <button type="submit">Add Task</button>
    </form>
    <a href="{{ request.route_url('tasks') }}">Back to Task List</a>
{% endblock %}
